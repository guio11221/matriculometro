datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
 
// Modelo para armazenar os objetivos de matrícula por categoria (ex: "Maternal manhã")
model EnrollmentGoal {
id        Int      @id @default(autoincrement())
category  String   @unique // Categoria do objetivo (garante que não há duplicatas)
target    Int      @default(0) // Alvo de matrículas (valor numérico)
achieved  Int      @default(0) // Matrículas realizadas (valor numérico)
createdAt DateTime @default(now())
updatedAt DateTime @updatedAt
}